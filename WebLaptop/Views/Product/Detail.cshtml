@model WebLaptop.Models.ProductViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Assets/client/css/etalage.css" rel="stylesheet" />
@section slideJS{
    <script type="text/javascript" src="/Assets/client/js/jquery.flexisel.js"></script>
    <script src="/Assets/client/js/jquery.etalage.min.js"></script>
    <script>
        jQuery(document).ready(function ($) {

            $('#etalage').etalage({
                thumb_image_width: 300,
                thumb_image_height: 400,
                source_image_width: 900,
                source_image_height: 1200,
                show_hint: true,
                //click_callback: function (image_anchor, instance_id) {
                //    alert('Callback example:\nYou clicked on an image with the anchor: "' + image_anchor + '"\n(in Etalage instance: "' + instance_id + '")');
                //}
            });
        });
    </script>
    <script>
        $(window).load(function () {
            $("#flexiselDemo1").flexisel({
                visibleItems: 5,
                animationSpeed: 1000,
                autoPlay: true,
                autoPlaySpeed: 3000,
                pauseOnHover: true,
                enableResponsiveBreakpoints: true,
                responsiveBreakpoints: {
                    portrait: {
                        changePoint: 480,
                        visibleItems: 1
                    },
                    landscape: {
                        changePoint: 640,
                        visibleItems: 2
                    },
                    tablet: {
                        changePoint: 768,
                        visibleItems: 3
                    }
                }
            });

        });
    </script>

}

<div class=" single_top">
    <div class="single_grid">
        <div class="grid images_3_of_2">
            <ul id="etalage">
                <li>
                    <a href="#">
                        <img class="etalage_thumb_image img-responsive" src="@Model.Image" />
                        <img class="etalage_source_image img-responsive" src="@Model.Image" title="@Model.Name" />
                    </a>
                </li>
                @{
                    var moreImages = (List<string>)ViewBag.MoreImages;
                    if (moreImages.Count > 0)
                    {
                        foreach (var images in moreImages)
                        {
                            <li>
                                <img class="etalage_thumb_image img-responsive" src="@images" />
                            </li>
                        }
                    }
                }
            </ul>
            <div class="clearfix"> </div>
        </div>
        <div class="desc1 span_3_of_2">


            <h4>@Model.Name</h4>
            <div class="cart-b">
                <div class="left-n ">
                    @if (Model.PromotionPrice.HasValue)
                    {
                        <span style="color:red">Giá sốc chỉ còn có :</span><span style="color:red;font-size:28px"> @(Model.PromotionPrice.Value.ToString("N0"))</span>
                        <br />
                        <span style="color:gray">Giá gốc : </span><span class="reducedfrom" style="font-size:20px;">@(Model.Price == 0 ? "Liên hệ" : Model.Price.ToString("N0"))</span>
                    }
                    else
                    {
                        @(Model.Price == 0 ? "Liên hệ" : Model.Price.ToString("N0"))
                    }
                </div>
                <a class="now-get get-cart-in" href="/them-gio-hang/@Model.ID">Thêm vào giỏ hàng</a>
                <div class="clearfix"></div>
            </div>
            <h6>@Model.Quantity sản phẩm còn lại</h6>
            <p>@Model.Description</p>
            <div class="tag">
                <h5>Tag:</h5>
                <ul class="taglist">
                    @foreach (var tag in (IEnumerable<WebLaptop.Models.TagViewModel>)ViewBag.Tags)
                    {
                        <li><a href="/tag/@(tag.ID).html">@(tag.Name), </a></li>
                    }
                </ul>
            </div>
            <div class="clearfix"></div>
            <div class="share">
                <h5>Share Product :</h5>
                <ul class="share_nav">
                    <li><a href="#"><img src="/Assets/client/images/facebook.png" title="facebook"></a></li>
                    <li><a href="#"><img src="/Assets/client/images/twitter.png" title="Twiiter"></a></li>
                    <li><a href="#"><img src="/Assets/client/images/rss.png" title="Rss"></a></li>
                    <li><a href="#"><img src="/Assets/client/images/gpluse.png" title="Google+"></a></li>
                </ul>
            </div>


        </div>
        <div class="clearfix"> </div>
    </div>
    @{
        var relatedProducts = (IEnumerable<WebLaptop.Models.ProductViewModel>)ViewBag.RelatedProducts;
    }
    <ul id="flexiselDemo1">
        @foreach (var product in relatedProducts)
        {
            <li><img src="@product.Image" /><div class="grid-flex"><a href="/@(product.Alias).p-@(product.ID).html">@product.Name</a><p>@product.Price.ToString("N2")</p></div></li>
        }
    </ul>

    <div class="toogle">
        <h3 class="m_3">Chi tiết sản phẩm</h3>
        <p class="m_text">@Html.Raw(Model.Content)</p>
    </div>
</div>
