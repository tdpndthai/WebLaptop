@using Microsoft.AspNet.Identity
<div class="header">
    <div class="top-header">
        <div class="container">
            <div class="top-header-left">
                <ul class="support">
                    <li><a href="#"><label> </label></a></li>
                    <li><a href="/lien-he.html">Liên hệ</a></li>
                </ul>
                <ul class="support">
                    <li class="van"><a href="#"><label> </label></a></li>
                    <li><a href="/gioi-thieu.html">Giới thiệu</a></li>
                </ul>
                <div class="clearfix"> </div>
            </div>
            <div class="top-header-right">
                <div class="down-top">
                    <select class="in-drop">
                        <option value="English" class="in-of">English</option>
                        <option value="Japanese" class="in-of">Japanese</option>
                        <option value="French" class="in-of">French</option>
                        <option value="German" class="in-of">German</option>
                    </select>
                </div>
                <div class="down-top top-down">
                    <select class="in-drop">

                        <option value="Dollar" class="in-of">Dollar</option>
                        <option value="Yen" class="in-of">Yen</option>
                        <option value="Euro" class="in-of">Euro</option>
                    </select>
                </div>
                <!---->
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="bottom-header">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="/Home"><img src="/Assets/client/images/logo.png" alt=" " /></a>
                </div>
                <div class="search">
                    <form method="get" action="/tim-kiem.html">
                        <input type="text" id="txtKeyWord" name="keyword" placeholder="Nhập từ khóa tìm kiếm">
                        <input type="submit" value="Tìm kiếm" id="btnSearch">
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="header-bottom-right">
                <!--đã được đăng nhập thì mới hiển thị nút-->
                @using (Html.BeginForm("LogOut", "Account", FormMethod.Post,new {@id="frmLogout" }))
                {
                    if (Request.IsAuthenticated)
                    {

                        @Html.AntiForgeryToken()
                        <div class="account"><a href="/tai-khoan.html"><span> </span>Xin chào: @User.Identity.GetUserName()</a></div>
                        <ul class="login">
                            <li>
                               <button type="submit" style="color:blue;border: 1px solid cornflowerblue;">Thoát</button>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="login">
                            <li><a href="/dang-nhap.html"><span> </span>Đăng nhập</a></li> |
                            <li><a href="/dang-ky.html">Đăng ký</a></li>
                        </ul>
                    }
                }
                <div class="cart"><a href="#"><span> </span>Giỏ hàng</a></div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
