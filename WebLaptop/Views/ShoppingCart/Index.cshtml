
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section slideJS{
    <script src="/Assets/client/js/shoppingCart.js"></script>
}
<div class="single_top">
    <div class="single_grid">
        <div id="cartContent">
            <table class="table">
                <thead>
                    <tr>
                        <td>STT</td>
                        <td>Tên sản phẩm</td>
                        <td>Hình ảnh</td>
                        <td>Giá</td>
                        <td>Số lượng</td>
                        <td>Thành tiền</td>
                    </tr>
                </thead>
                <tbody id="cartBody"></tbody>
            </table>
            <button class="btn btn-success" id="btnContinue">Tiếp tục mua hàng</button>
            <button class="btn btn-danger" id="btnDeleteAll">Xóa giỏ hàng</button>
            <button class="btn btn" id="btnCheckOut">Thanh toán</button>
            <div class="pull-right">
                Tổng số tiền: <span id="lblTotalOrder"></span>
            </div>
        </div>
        <div id="divCheckout" style="display:none">
            <div class="">
                <div class="reservation_top">
                    <div class=" contact_right">
                        <h3>Thanh toán</h3>
                        <div class="contact-form">
                            <form method="post" id="frmPayment">
                                @if (Request.IsAuthenticated)
                                {
                                    <label>
                                        <input type="checkbox" id="checkUserLoginInfo" />
                                        Sử dụng thông tin đăng nhập
                                    </label>
                                }
                                <input type="text" id="txtName" class="textbox" name="name" placeholder="Họ tên">
                                <input type="text" class="textbox" id="txtAddress" name="address" placeholder="Địa Chỉ">
                                <input type="text" class="textbox" id="txtEmail" name="email" placeholder="Email">
                                <input type="text" class="textbox" id="txtPhone" name="phone" placeholder="Điện thoại">
                                <textarea value="Message" id="txtMessage" name="msg"></textarea>
                                <input type="button" id="btnCreateOrder" value="Thanh toán">
                                <div class="clearfix"> </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<script id="tplCart" type="x-tml-mustache">
    <tr>
        <td>{{ProductId}}</td>
        <td>{{ProductName}}</td>
        <td><img src="{{Image}}" height="20"/></td>
        <td>{{PriceF}}</td>
        <td><input class="input txtQuantity" data-price="{{Price}}" data-id="{{ProductId}}" value="{{Quantity}}" type="number"/></td>
        <td id="amount_{{ProductId}}">{{Amount}}</td>
        <td><button class="btn btn-danger btnDeleteItem" data-id="{{ProductId}}" ><i class="fa fa-close"></i></button></td>
    </tr>
    
</script>

